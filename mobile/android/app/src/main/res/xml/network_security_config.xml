<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Only allow HTTPS for API endpoints -->
        <domain includeSubdomains="true">openai-rewrite.onrender.com</domain>
        
        <!-- Certificate pinning for enhanced security -->
        <pin-set expiration="2025-12-31">
            <!-- Add actual certificate pins when available -->
            <!-- <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin> -->
        </pin-set>
        
        <!-- Trust only system certificate authorities -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Allow localhost for development (debug builds only) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator host -->
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Default: Block all cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>